                <Button x:Name="Ajouter"  Click="returnListCategorie" HorizontalAlignment="Left" VerticalAlignment="Center"  Content="Retourner Ã  la liste" Width="200" Height="30" Padding="0" >
                </Button>

                
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
